BoxLayout:
    orientation: 'vertical'

    # Top Section (BoxLayout) - Horizontal Arrangement
    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: input_number
            text: ''

            font_size: 40
            multiline: False

        Button:
            orientation: 'vertical'
            text: 'Square'
            # The following line specifies the function in the app class to call when the button is pressed
            on_press: app.handle_calculate(input_number.text)

        Label:
            id: output_label
            font_size: 48
            color: (1, 0, 1, 1)  # Pink color


    BoxLayout:
        orientation: 'horizontal'

        Label:
            text: 'Enter a number and press "Square"'
